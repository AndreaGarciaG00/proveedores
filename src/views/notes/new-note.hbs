<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Nuevo Producto</h3>
    </div>
    <div class="card-body text-right">
      <form action="/notes/new-note" method="POST">
        <div class="mb-3">
          <label for="title">Título</label>
          <input type="text" name="title" class="form-control" placeholder="Título" autofocus />
        </div>
        <div class="mb-3">
          <label for="description">Descripción</label>
          <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
        </div>
        <div class="mb-3">
          <label for="ingreso">Fecha de Ingreso</label>
          <input type="date" name="ingreso" class="form-control">
        </div>
        <div class="mb-3">
          <label for="proveedor">Proveedor</label>
          <input type="text" name="proveedor" class="form-control">
        </div>
        <div class="mb-3">
          <label for="tipoProducto">Tipo de Producto</label>
          <input type="text" name="tipoProducto" class="form-control">
        </div>
        <button class="btn btn-primary w-100" type="submit">Subir</button>
      </form>
    </div>
  </div>
</div>
